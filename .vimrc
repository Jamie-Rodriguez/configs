" Colourscheme
color slate

" (gVim) Font
" Note: Different operating systems have different syntax for specifying fonts
" e.g.
"     OSX/Windows: SF\ Mono\ Medium:h12
"     Linux:       SF\ Mono\ Medium\ 12
" See :help guifont inside gVim for more details
set guifont=SF\ Mono\ Medium\ 12"

" Display linenumbers
set number

" Display whitespace characters as special characters
set showbreak=↪\ 
set list
set listchars=tab:→\ ,eol:↲,nbsp:␣,trail:·,extends:⟩,precedes:⟨

" set inccommand=nosplit
set clipboard=unnamed " http://vim.wikia.com/wiki/Accessing_the_system_clipboard

